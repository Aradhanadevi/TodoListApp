<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">@color/dark_blue</item>

        <!-- Background color for screens. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/CardViewStyle</item> <!-- Custom card style -->
        <item name="editTextStyle">@style/EditTextStyle</item> <!-- Custom EditText style -->
    </style>

    <!-- Custom CardView Style -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_blue</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="colorControlActivated">@color/green_blue</item> <!-- Cursor color -->
    </style>


</resources>